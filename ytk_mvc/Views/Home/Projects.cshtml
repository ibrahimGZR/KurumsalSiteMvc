@using ytk_mvc.Models
@model ProjectPage

@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <ol>
            <li><a href="/">Anasayfa</a></li>
            <li>Projeler</li>
        </ol>
        <h2>Projeler</h2>

    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">Hepsi</li>
                    @foreach (var category in Model.Category)
                    {

                        <li data-filter=".filter-@category.Name">@category.Name</li>


                    }
                </ul>
            </div>
        </div>

        <div class="row portfolio-container">
            @foreach (var project in Model.Project)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-@project.Categories.Name">
                    <div class="portfolio-wrap">
                        <img src="~/Upload/img/@project.ImageFolders.Name/0.jpg" class="img-fluid" alt="" height="450" width="450">
                        <div class="portfolio-info">
                            <h4>@project.Categories.Name</h4>
                            <p>Projesi</p>
                            <div class="portfolio-links">
                                <a href="~/Upload/img/@project.ImageFolders.Name/0.jpg" data-gall="portfolioGallery" class="venobox" title="@project.Name"><i class="bx bx-zoom-in"></i></a>
                                <a href="~/Home/Details/@project.Id" title="More Details"><i class="bx bx-link"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section><!-- End Portfolio Section -->
